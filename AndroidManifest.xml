<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.quaddyservices.dynamicnightlight"
    android:versionCode="8"
    android:versionName="1.8" >

    <!-- 
    1.8:
    * Deutsche Ãœbersetzung
    * Czech translation added
    1.5:
    * Uhr kann gedreht werden
    * Helligkeit kann eingestellt werden
    * Bug mit Android 4.0.3 - 4.0.4 gefixt.
 -->
    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:hardwareAccelerated="false" android:restoreAnyVersion="true" android:killAfterRestore="true">
        <activity
            android:name="de.quaddyservices.dynamicnightlight.FullscreenActivity"
            android:configChanges="keyboardHidden"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" android:screenOrientation="unspecified">
   <!--                   android:screenOrientation="landscape"
    -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="de.quaddyservices.dynamicnightlight.SettingsActivity" android:screenOrientation="nosensor">
             <category android:name="android.intent.catagory.PREFERENCE" />
        </activity>
        
    </application>

</manifest>
